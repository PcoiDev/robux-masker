{
  "manifest_version": 3,
  "name": "Robux Masker",
  "version": "1.0",
  "description": "Hide your Robux balance and transaction history for privacy",
  "host_permissions": ["https://www.roblox.com/*"],
  "permissions": ["storage", "tabs"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Robux Masker",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "96": "icons/96.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}